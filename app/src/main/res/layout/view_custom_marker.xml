<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_marker_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.robert.custommarker.RoundedImageView
        android:id="@+id/shop_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_maker"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/shop_photo_tmp"
        app:riv_corner_radius="3dp"
        app:riv_border_width="1dp"
        app:riv_oval="false"
        app:riv_border_color="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.robert.custommarker.RoundedImageView
        android:id="@+id/shop_photo_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_maker"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/shop_photo_tmp"
        app:riv_corner_radius="3dp"
        app:riv_border_width="1dp"
        app:riv_oval="false"
        app:riv_border_color="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationX="-3dp"
        android:translationY="3dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/badge"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignTop="@+id/shop_photo"
        android:layout_gravity="center"
        android:background="@drawable/badge_background"
        android:gravity="center"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="9sp"
        android:textStyle="bold"
        android:translationX="-9dp"
        android:translationY="9dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/shop_photo"
        app:layout_constraintEnd_toEndOf="@+id/shop_photo"
        app:layout_constraintStart_toEndOf="@+id/shop_photo"
        app:layout_constraintTop_toTopOf="@+id/shop_photo" />

</android.support.constraint.ConstraintLayout>